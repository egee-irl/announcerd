{
  "builders": [
    {
      "type": "docker",
      "image": "node:10",
      "commit": "true",
      "changes": ["CMD [\"/usr/bin/tail\", \"-f\", \"/etc/hosts\"]"]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "discord-announcer.tar.gz",
      "destination": "/discord-announcer.tar.gz"
    },
    {
      "type": "shell",
      "inline": ["tar -zxf discord-announcer.tar.gz", "npm install --production", "which node"]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "egeeio/discord-announcer",
        "tag": "latest"
      },
      "docker-push"
    ]
  ]
}
